      \
      <WhatSourceItem path_type="absolute">C:\temp\CopyToDeliveryRepoGitHub\CopyToDeliveryExampleSource\c.txt</WhatSourceItem>
    </WhereTarget>

    <!-- ************ Copy folder with content -->
    <WhereTarget  path_type="relative">
      \
      <WhatSourceItem path_type="absolute">C:\temp\CopyToDeliveryRepoGitHub\CopyToDeliveryExampleSource\subc\*</WhatSourceItem>
    </WhereTarget>

    <!-- ************ Copy multiple files -->
    <WhereTarget  path_type="relative">
      \
      <WhatSourceItem path_type="absolute">C:\temp\CopyToDeliveryRepoGitHub\CopyToDeliveryExampleSource\suba\*.xml</WhatSourceItem>
    </WhereTarget>

   <!-- ************ Copy and rename one specific file -->
    <WhereTarget  path_type="relative" copy_type="rename">
      \a_renamed_c.txt
      <WhatSourceItem path_type="absolute">C:\temp\CopyToDeliveryRepoGitHub\CopyToDeliveryExampleSource\c.txt</WhatSourceItem>
    </WhereTarget>

